<?xml version="1.0"?>
  <!-- turn and slip indicator -->
  <PropertyList> 
    <path>triple.ac</path>
    <animation> 
      <type>rotate</type>
      <object-name>supplyneedle</object-name>
      <property>engines/engine/oilp-norm</property>
      <interpolation> 
        <entry> 
          <ind>0</ind>
          <dep>-0</dep>
        </entry>
        <entry> 
          <ind>0.05</ind>
          <dep>45</dep>
        </entry>
        <entry> 
          <ind>0.10</ind>
          <dep>90</dep>
        </entry>
        <entry> 
          <ind>0.15</ind>
          <dep>135</dep>
        </entry>
        <entry> 
          <ind>0.35</ind>
          <dep>180</dep>
        </entry>
        <entry> 
          <ind>0.5</ind>
          <dep>180</dep>
        </entry>
        <entry> 
          <ind>0.75</ind>
          <dep>180</dep>
        </entry>
        <entry> 
          <ind>1.0</ind>
          <dep>180</dep>
        </entry>
      </interpolation>
      <axis> 
        <x>1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>

    <animation> 
      <type>rotate</type>
      <object-name>L-brakeneedle</object-name>
      <property>controls/gear/brake-left</property>
      <interpolation> 
        <entry> 
          <ind>0</ind>
          <dep>0</dep>
        </entry>
        <entry> 
          <ind>0.5</ind>
          <dep>-75</dep>
        </entry>
        <entry> 
          <ind>1</ind>
          <dep>-150</dep>
        </entry>
      </interpolation>
      <center>
        <x-m>0</x-m>
        <y-m>-0.0036</y-m>
        <z-m>0.0072</z-m>
      </center>
      <axis> 
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>

	<animation> 
      <type>rotate</type>
      <object-name>R-brakeneedle</object-name>
      <property>controls/gear/brake-right</property>
      <interpolation> 
        <entry> 
          <ind>0</ind>
          <dep>0</dep>
        </entry>
        <entry> 
          <ind>0.5</ind>
          <dep>75</dep>
        </entry>
        <entry> 
          <ind>1</ind>
          <dep>150</dep>
        </entry>
      </interpolation>
      <center>
        <x-m>0</x-m>
        <y-m>0.0036</y-m>
        <z-m>0.0072</z-m>
      </center>
      <axis> 
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>

   <animation> 
      <type>material</type>
      <emission> 
        <factor-prop>/controls/lighting/panel-norm</factor-prop>
        <red>0.75</red>
        <green>0.25</green>
        <blue>0.25</blue>
      </emission>
    </animation>

    <!-- *** LoD *** -->
    <animation> 
      <type>range</type>
      <min-m>0</min-m>
      <max-m>5</max-m>
    </animation>
  </PropertyList>
