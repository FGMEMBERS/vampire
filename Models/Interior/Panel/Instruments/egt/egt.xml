<?xml version="1.0"?>

<!-- exhaust gas temperature -->

<PropertyList>

	<path>egt.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>egt-Needle1</object-name>
		<property>engines/engine/itt-norm</property>
		<interpolation>
			<entry>
				<ind>0.05</ind>
				<dep>-44</dep>
			</entry>
			<entry>
				<ind>0.52</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>0.99</ind>
				<dep>44</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>-0.01503</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>material</type>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>

	<!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>
</PropertyList>
