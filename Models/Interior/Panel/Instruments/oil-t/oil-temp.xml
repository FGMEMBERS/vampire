<?xml version="1.0"?>
<PropertyList>
	<path>oil-temp.ac</path>
	<animation>
		<type>rotate</type>
		<object-name>oil-temp-Needle1</object-name>
		<property>engines/engine[0]/oil-temperature-degf</property>
		<interpolation>
			<entry>
				<ind>40</ind>
				<dep>-160</dep>
			</entry>
			<entry>
				<ind>60</ind>
				<dep>-135</dep>
			</entry>
			<entry>
				<ind>80</ind>
				<dep>-100</dep>
			</entry>
			<entry>
				<ind>90</ind>
				<dep>-75</dep>
			</entry>
			<entry>
				<ind>100</ind>
				<dep>-45</dep>
			</entry>
			<entry>
				<ind>110</ind>
				<dep>-10</dep>
			</entry>
			<entry>
				<ind>120</ind>
				<dep>35</dep>
			</entry>
			<entry>
				<ind>130</ind>
				<dep>90</dep>
			</entry>
			<entry>
				<ind>140</ind>
				<dep>155</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>-0.04</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>material</type>
		<condition>
			<greater-than>
				<property>/controls/lighting/panel-norm</property>
				<value>0</value>
			</greater-than>
		</condition>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>
	
	<!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>
</PropertyList>
